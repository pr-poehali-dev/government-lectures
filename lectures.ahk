; Функция показа окна лекции
; ============================================
ShowLectureWindow(content, lectureNum) {
    global completedLectures
    
    Gui, Lecture:New
    Gui, Lecture:Font, s9, Consolas
    Gui, Lecture:Color, FFFFFF
    Gui, Lecture:Add, Edit, x10 y10 w780 h500 ReadOnly vLectureText, %content%
    Gui, Lecture:Font, s10, Segoe UI
    Gui, Lecture:Add, Button, x10 y520 w780 h40 gMarkCompleted, Отметить как завершённую
    Gui, Lecture:Show, w800 h580, Лекция %lectureNum%
    
    currentLecture := lectureNum
    return
    
    LectureButtonMarkCompleted:
    MarkCompleted()
    return
}

; Отметка лекции как завершенной
MarkCompleted() {
    global currentLecture, completedLectures
    
    if (completedLectures = "")
        completedLectures := currentLecture
    else if (!InStr(completedLectures, currentLecture))
        completedLectures .= "," . currentLecture
    
    UpdateProgress()
    Gui, Lecture:Destroy
    MsgBox, 64, Успех, Лекция отмечена как завершённая!
    return
}

; Обновление прогресса
UpdateProgress() {
    global completedLectures
    
    if (completedLectures = "")
        count := 0
    else {
        StringSplit, lectureArray, completedLectures, `,
        count := lectureArray0
    }
    
    progress := Round((count / 7) * 100)
    GuiControl,, ProgressBar, %progress%
    GuiControl,, ProgressText, Завершено: %count% из 7 лекций
    return
}

